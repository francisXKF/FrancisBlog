$(document).ready(function(){
  login();
});

function login(){
  $("#login").click(function(){
    $.ajax({
      url: "login.jsp",
      data: {
        username: "francis",
        password: "123456"
      },
      type: "post",
      datatype: "json",
      success: function(data){
//        $("#testcontent").load("/francisBlog/jsp/index.jsp");
        $("#testcontent").html('<jsp:include page="/jsp/login.jsp" flush="true" />');
      },
      error: function(data){
        alert("error" + data.username);
      }
    });
  });
}