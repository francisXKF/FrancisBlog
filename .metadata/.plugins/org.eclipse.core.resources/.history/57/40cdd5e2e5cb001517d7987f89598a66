$(document).ready(function(){
  login();
  editorAdd();
});

function login(){
  $("#login").click(function(){
    $.ajax({
      url: "login.jsp",
      data: {
        username: "francis",
        password: "123456"
      },
      type: "post",
      datatype: "json",
      success: function(data){
//        $("#testcontent").load("/francisBlog/jsp/index.jsp");
        $("#testcontent").html('<%@include page="/index.html" %>');
      },
      error: function(data){
        alert("error" + data.username);
      }
    });
  });
}

function editorAdd(){
  var editor = new Simditor({
    textarea: $('#richEditor');
  });
}